<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:elevation="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="calibri"
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tarun Chainani"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/contact_name_member_wise_give_all"/>
                    <TextView
                        android:fontFamily="calibri"
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Software Comapny"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/comany_name_member_wise_give_all"/>
                    <TextView
                        android:fontFamily="calibri"
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Web Devloper"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/category_member_wise_give_all"/>
                    <TextView
                        android:fontFamily="calibri"
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By: esrafil ansari "
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/contact_by_member_wise_give_all"/>

                </LinearLayout>
                <LinearLayout
                    android:fontFamily="calibri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:id="@+id/like_button_give_all"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/like_iconn"/>
                        <TextView
                            android:background="@drawable/editextbackground"
                            android:id="@+id/likecount_give"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="30dp"
                            android:textAlignment="center"
                            android:layout_marginRight="10dp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content"
                            android:text="25"/>
                        <TextView
                            android:id="@+id/tiame_date_give_all"
                            android:textSize="14sp"
                            android:fontFamily="calibri"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="Monday 09-05-2019"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>